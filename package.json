{
	"name": "{{snapfu.name}}",
	"version": "0.0.1",
	"main": "index.js",
	"scripts": {
		"build": "webpack --mode=production",
		"cypress": "cypress open --project tests",
		"dev": "webpack serve",
		"format": "prettier --write \"**/*.{js,ts,json}\"",
		"lint": "eslint --fix \"**/*.{js,ts}\"",

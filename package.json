		"webpack-dev-server": "^3.11.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"./package.json": [
			"prettier --write"
		],
		"*.{js,ts}": [
			"prettier --write",
			"eslint --fix"
		]
	}

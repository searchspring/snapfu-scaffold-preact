{
	"name": "{{snapfu.name}}",
	"version": "0.0.1",
	"main": "index.js",
	"scripts": {
		"analyze": "webpack --config webpack.prod.js --analyze",
		"build": "rm -rf ./dist && webpack --config webpack.prod.js",
		"cypress": "cypress open --project tests",
		"clean": "rm -rf ./node_modules && rm ./package-lock.json",
		"dev": "kill $(lsof -ti:3333,8888); webpack serve --config webpack.dev.js",
		"format": "prettier --write \"**/*.{js,ts,json}\"",
		"lint": "eslint --fix \"./src/**/*.{js,ts}\"",
		"test": "kill $(lsof -ti:3333,8888); webpack serve --config webpack.prod.js & (cypress run --project tests && kill $(lsof -ti:3333,8888))",
		"prepare": "husky install"
	},
	"author": "{{snapfu.author}}",
	"searchspring": {
		"siteId": "{{snapfu.siteId}}",
		"framework": "preact",
		"tags": []
	},
	"license": "MIT",
	"prettier": "@searchspring/prettier",
	"dependencies": {
		"@searchspring/snap-preact": "^0.9.1",
		"@searchspring/snap-preact-components": "^0.9.1",
		"mobx": "^6.3.3",
		"mobx-react": "^7.2.0",
		"preact": "^10.5.14"
	},
	"devDependencies": {
		"@babel/core": "^7.15.5",
		"@babel/plugin-proposal-class-properties": "^7.14.5",
		"@babel/plugin-proposal-decorators": "^7.15.4",
		"@babel/plugin-transform-react-jsx": "^7.14.9",
		"@babel/plugin-transform-runtime": "^7.15.0",
		"@babel/preset-env": "^7.15.6",
		"@babel/preset-react": "^7.14.5",
		"@babel/runtime": "^7.15.4",
		"@prefresh/babel-plugin": "^0.4.1",
		"@prefresh/webpack": "^3.3.2",
		"@searchspring/prettier": "^1.0.2",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.2.2",
		"core-js": "^3.18.1",
		"css-loader": "^6.3.0",
		"cypress": "^8.5.0",
		"eslint": "^7.32.0",
		"eslint-plugin-react": "^7.26.0",
		"file-loader": "^6.2.0",
		"husky": "^7.0.2",
		"lighthouse": "^8.5.1",
		"lint-staged": "^11.1.2",
		"node-sass": "^6.0.1",
		"prettier": "^2.4.1",
		"sass-loader": "^12.1.0",
		"style-loader": "^3.3.0",
		"webpack": "^5.54.0",
		"webpack-bundle-analyzer": "^4.4.2",
		"webpack-cli": "^4.8.0",
		"webpack-dev-server": "^4.3.0",
		"webpack-merge": "^5.8.0"
	},
	"lint-staged": {
		"./package.json": [
			"prettier --write"
		],
		"./src/**/*.{js,jsx,ts,tsx}": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"browserslist": [
		"last 1 version",
		"not dead",
		"ie >= 11"
	]
}
